{
  "name": "bem-isi-backend",
  "version": "1.0.0",
  "description": "Backend API for BEM FSRD ISI Yogyakarta Website",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "dev": "nodemon server.js",
    "migrate": "node database/migrate.js",
    "create-admin": "node scripts/createAdmin.js",
    "update-admin": "node scripts/updateAdmin.js",
    "kill-port": "node scripts/kill-port.js",
    "fix-admin-role": "node scripts/fix-admin-role.js",
    "create-tables": "node scripts/create-missing-tables.js",
    "fix-images": "node scripts/fix-image-paths.js",
    "prod:start": "./start-production.sh",
    "prod:pm2": "pm2 start ecosystem.config.js --env production || pm2 start server.js --name bem-backend",
    "prod:pm2:stop": "pm2 stop bem-backend",
    "prod:pm2:restart": "pm2 restart bem-backend",
    "prod:pm2:logs": "pm2 logs bem-backend"
  },
  "keywords": ["bem", "isi", "yogyakarta", "api"],
    "author": "BEM FSRD ISI Yogyakarta",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "express-validator": "^7.0.1",
    "nodemailer": "^6.9.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}

